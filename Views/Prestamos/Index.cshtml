@*recupero el viewBag*@

@*para referenciar un metodo, una variable o un elemento de codigo utilizado '@'*@

<h1>@ViewBag.Titulo</h1>
<h1>@ViewBag.Subtitulo</h1>



<div class="row">
    <div class="col-md-2" style="text-align:right;">
        <a href="~/Prestamos/Nuevo_Prestamo" class="btn btn-primary">Nuevo prestamo</a>
    </div>
</div>

<div class="col-md-12  row text-center">
    @foreach (var prestamos in Model)
    {
        <div class="col-md-3 col-sm-12">
            @*//Tarjeta de Bootstrap*@
            <div class="card" style="width: 18rem;">

                <div class="card-body">
                    <h2 class="card-title">Prestamo no. @prestamos.PrestamoID</h2>
                    <h5 class="card-title">@prestamos.ClienteID</h5>
                    <ul>
                        <li class="card-text">@prestamos.Monto</li>
                        <li class="card-text">@prestamos.TasaInteres</li>
                        <li class="card-text">@prestamos.FechaInicio</li>
                        <li class="card-text">@prestamos.FechaVencimiento</li>
                        <li class="card-text">@prestamos.SaldoPendiente</li>
                    </ul>
                    <a class="btn btn-warning" href="~/Prestamos/Editar_Prestamo/@prestamos.PrestamoID">Editar</a>
                    <a class="btn btn-danger" href="~/Prestamos/Confirmar_Eliminar/@prestamos.PrestamoID">Eliminar</a>
                </div>
            </div>
        </div>
    }
</div>

