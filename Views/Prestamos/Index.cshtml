@*recupero el viewBag*@

@*para referenciar un metodo, una variable o un elemento de codigo utilizado '@'*@

<h1>@ViewBag.Titulo</h1>
<h1>@ViewBag.Subtitulo</h1>

<br />

<div class="row">
    <div class="col-md-2" style="text-align:right;">
        <a href="~/Prestamos/Nuevo_Prestamo" class="btn btn-primary">Nuevo prestamo</a>
    </div>
</div>
<br />

<table class="table table-bordered table-striped table-striped-columns table-responsive">
    <thead>
        <tr>
            <th scope="col"> PrestamoID     </th>
            <th scope="col"> ClienteID     </th>
            <th scope="col"> Monto     </th>
            <th scope="col"> Tasa de interes     </th>
            <th scope="col"> FechaNa de inicio   </th>
            <th scope="col"> Fecha de venciminento       </th>
            <th scope="col"> Saldo pendiente        </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var prestamos in Model)
        {
            <tr>
                <td>@prestamos.PrestamoID </td>
                <td>@prestamos.ClienteID </td>
                <td>@prestamos.Monto </td>
                <td>@prestamos.TasaInteres </td>
                <td>@prestamos.FechaInicio </td>
                <td>@prestamos.FechaVencimiento </td>
                <td>@prestamos.SaldoPendiente </td>

                <td>
                    <a class="btn btn-warning" href="~/Prestamos/Editar_Prestamo/@prestamos.PrestamoID">Editar</a>

                </td>
                <td>
                    <a class="btn btn-danger" href="~/Prestamos/Confirmar_Eliminar/@prestamos.PrestamoID">Eliminar</a>
                </td>

            </tr>
        }
    </tbody>
</table>



