<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" crossorigin="anonymous">

    @* Script sweet alert *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary">
        <div class="container">
            @Html.ActionLink("Banco", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    

                    <li>@Html.ActionLink("Administración de sesiones", "Index", "Sesiones", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("Transacciones", "Index", "Transacciones", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("Tarjetas", "Index", "Tarjetas", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("Prestamos", "Index", "Prestamos", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("Cuentas", "Index", "Cuentas", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("Clientes", "Index", "Clientes", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @Html.Partial("_SweetAlert")
        @RenderBody()
        <hr />

        <footer class="py-5 footer-expand-sm bg-dark">
            <div class="container px-4"><p class="m-0 text-center text-white">Banco &copy; Your Website 2024</p></div>
        </footer>
        @*<footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
