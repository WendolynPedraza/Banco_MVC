@*recupero el viewBag*@

@*para referenciar un metodo, una variable o un elemento de codigo utilizado '@'*@

<h1>@ViewBag.Titulo</h1>
<h1>@ViewBag.Subtitulo</h1>
<br />
<div class="row">

    <div class="col-md-2" style="text-align:right;">
        
        <a href="~/Clientes/Nuevo_Cliente" class="btn btn-primary">
            <i class="fa fa-user"></i>Nuevo cliente</a>

    </div>
</div>

<br />

<table class="table table-bordered table-striped table-striped-columns table-responsive table-dark">
    <thead>
        <tr>
            <th scope="col"> ClienteID     </th>
            <th scope="col"> Nombre     </th>
            <th scope="col"> Apellidos     </th>
            <th scope="col"> FechaNacimiento   </th>
            <th scope="col"> Dirección         </th>
            <th scope="col"> Telefono        </th>
            <th scope="col"> Email     </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.ClienteID </td>
                <td>@cliente.Nombre </td>
                <td>@cliente.Apellido </td>
                <td>@cliente.FechaNacimiento </td>
                <td>@cliente.Direccion </td>
                <td>@cliente.Telefono </td>
                <td>@cliente.Email </td>

                <td>
                    <a class="btn btn-outline-warning" href="~/Clientes/Editar_Cliente/@cliente.ClienteID"><i class="fas fa-edit"></i>Editar</a>

                </td>
                <td>
                    <a class="btn btn-outline-danger" href="~/Clientes/Confirmar_Eliminar/@cliente.ClienteID"><i class="fas fa-trash-alt"></i>Eliminar</a>
                </td>

            </tr>
        }
    </tbody>
</table>



